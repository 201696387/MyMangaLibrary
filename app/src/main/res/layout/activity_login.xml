<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.jfmcode.mymangalibrary.Activity.ActivityLogin"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/act_login_titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="10dp">
        <EditText
            android:id="@+id/act_login_userET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="username"
            android:textAlignment="center"
            android:inputType="text"
            android:background="#fff"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/act_login_passET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="password"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:background="#fff"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/act_login_loginBTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LOGIN"
            android:textAlignment="center"
            android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/act_login_linkTV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/act_login_termsTV"
        android:layout_alignParentStart="true"
        android:text="No MyAnimeList account? No problem! \nClick Here to create one on their official site."
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/act_login_termsTV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Terms of Use."
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryLight" />

</RelativeLayout>
